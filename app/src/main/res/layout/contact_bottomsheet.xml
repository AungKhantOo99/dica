<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:nestedScrollingEnabled="true"
    android:id="@+id/layoutbuttomsheet"
    app:layout_behavior="android.support.design.widget.ButtomSheetBehavior"
    android:background="#666666"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbg"
        android:orientation="vertical">
         <fragment
             android:layout_margin="20dp"
             android:layout_width="match_parent"
             android:layout_height="230dp"
             android:layout_gravity="center"
             android:name="com.google.android.gms.maps.SupportMapFragment"
             android:id="@+id/map"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Hello"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:text="Address"
            android:layout_marginStart="45dp"
            android:textSize="16sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:text="Phone"
            android:layout_marginStart="45dp"
            android:textSize="17sp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="45dp"
                android:src="@mipmap/phone_round" />
            <TextView
                android:id="@+id/firstph"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:text="09666888125"
                android:textColor="#000000" />
            <Button
                android:id="@+id/callfirst"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Now" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/secphicon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="45dp"
                android:src="@mipmap/phone_round" />
            <TextView
                android:id="@+id/secondph"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:text="096668"
                android:textColor="#000000" />
            <Button
                android:id="@+id/callsecond"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Now" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:layout_marginStart="45dp"
            android:textSize="17sp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="45dp"
                android:src="@mipmap/email_round" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:text="aakkoo"
                android:id="@+id/firstemail"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="45dp"
                android:src="@mipmap/email_round" />
            <TextView
                android:id="@+id/secondemail"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:text="aakkoo"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>